@model PagedList.IPagedList<PPCRentalProject.Models.PROPERTY>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Home Page";
}

<!--Page's Header-->
<div class="header">
    <div class="bg-color">
        <header id="main-header"></header>
        <div class="wrapper">
            <div class="container">
                <div class="row">
                    <div class="banner-info text-center wow fadeIn delay-05s">
                        <h3>Welcome to Perfect Property Company</h3>
                        <h2 class="bnr-sub-title">Starting a new journey!!</h2>
                        <p class="bnr-para">
                            At PPC, We hold ourselves to the highest ethical and professional standards, and it is our goal to provide the most professional and courteous service.<br />
                            The PPC has many qualities that make us unique. We build strong relationships with our clients by identifying and catering to their individual needs and by keeping our clients aware and informed during every step of the process.
                        </p>
                        <div class="brn-btn">
                            <a href="#service" class="btn btn-download">Learn more...</a>
                        </div>
                        <div class="overlay-detail">
                            <a href="#"><i class="fa fa-angle-down"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!---->

<!--Featured Project-->
<section id="portfolio" class="section-padding wow fadeInUp delay-05s">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2 class="service-title pad-bt15">Featured Properties</h2>
                <p class="sub-title pad-bt15">
                    A list of projects picked by PPC Rental
                </p>
                <hr class="bottom-line">
            </div>

            @foreach (var item in Model)
            {
                <div class="col-md-4 col-sm-6 col-xs-12 portfolio-item padding-right-zero mr-btn-15">
                    <figure>
                        <img src="~/img/DatabaseImages/@item.Avatar" class="img-responsive">
                        <figcaption>
                            <h2>@item.PropertyName</h2>
                            <p>
                                <i class="fa fa-bed" aria-hidden="true"></i> Beds: @item.BedRoom |
                                <i class="fa fa-bath" aria-hidden="true"></i> Baths: @item.BathRoom
                            </p>
                            <p>@item.Content.Substring(0, 35)...</p>
                            <p><a class="btn btn-default" href="~/Project/ProjectDetail/@item.ID/#dt" role="button">View details »</a></p>
                        </figcaption>
                    </figure>
                </div>
            }

            <div class="brn-btn" style="text-align:center">
                <a href="~/User/User_ViewProjectList" class="btn btn-download" role="button" style="background-color:#002F2F">View more »</a>
            </div>
        </div>
    </div>
</section>
